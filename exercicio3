import  turtle

wn = turtle.Screen()
tess = turtle.Turtle()

#Determinando a base de x, y: para formar um triangulo
def triangle(x, y):

    tess.penup()
# Determinando as coordenadas de x, y
    tess.goto(x, y)

    # a funÃ§Ã£o da biblioteca para a tartaruga
    # formar a linha
    tess.pendown()
    for i in range(3):
        # vai para frente
        tess.forward(100)
        # a tartaruga vai virar para a esquerda
        tess.left(120)
        tess.forward(100)

turtle.onscreenclick(triangle,1)

# O servidor vai ouvir a entrada do turtle
turtle.listen()
# o turtle vai segurar a tela.
turtle.done()